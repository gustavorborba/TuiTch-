@model UsuarioModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <title>CadastrarUsuario</title>
</head>
<body>
    <h4>
        @TempData["Mensagem"]
    </h4>
    <div> 
        @using (Html.BeginForm("CadastrarUsuario", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.NomeCompleto, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.NomeCompleto, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NomeCompleto)
                </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Senha, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Senha)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmarSenha, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.ConfirmarSenha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmarSenha)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Sexo, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EnumDropDownListFor(m => m.Sexo, "Sexo", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Sexo)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FotoPerfil, new { @class = "col-sm-2, control-label" })
                    <div class="col-sm-10 pull-right">
                        @Html.TextBoxFor(m => m.FotoPerfil, new { type = "file" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </div>
                }
            </div>
</body>
</html>
